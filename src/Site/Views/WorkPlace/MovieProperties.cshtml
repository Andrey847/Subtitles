<div class="modal fade" id="dlgRenameMovie" tabindex="-1" role="dialog" aria-hidden="false">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">

			<div class="modal-header">
				<button type="button" class="btn-close-modal" id="btnCloseRenameMovie" onclick="$('#dlgRenameMovie').modal('hide')">
					<img />
				</button>
				<h5 class="srt-modal-title">Movie properties</h5>
			</div>
			<div class="modal-body">
				<div class="row">
					<div class="col-sm-2">Name:</div>
					<div class="col-sm-8">
						<input type="text" id="txtMovieName" class="form-control" />
					</div>
					<div class="col-sm-1">
						<button id="btnMovieRename" class="btn btn-primary" onclick="renameMovie();">Rename</button>
					</div>
				</div>
				<div class="row">
					<div class="col-sm-12">
						<span class="srt-error" style="display: none" id="vldMovieName"></span>
					</div>
				</div>				
			</div>

			<div class="modal-footer" id="dvRenameFooter">
				<button class="btn btn-danger" id="btnDeleteMovie" title="Delete movie" onclick="deleteMovie()">Delete</button>				
			</div>
		</div>
	</div>
</div>
